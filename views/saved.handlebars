<div class="m-3">
  <a href="/"><button type="button" id="back-btn" class="btn">Go Back Home
    </button></a><br>
</div>

<p id="title">Saved Articles</p>


<ul>
  {{#each articles}}
  {{#if saved}}

  <div class="card mx-auto m-5" style="width: 90%">
    <img src="{{img}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><a href="{{link}}">
          {{title}}
        </a></h5>
      <p class="card-text">{{summary}}</p>
      <a href="{{authorLink}}">
        {{authorName}}
      </a> | {{date}}

    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">{{> buttons/buttons}}</li>
    </ul>

  </div>

  {{/if}}
  {{/each}}
</ul>