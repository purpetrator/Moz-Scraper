<p id="title">Moz Blog Scraper</p>
<img src="/assets/img/dig4.jpg" width="80%" />

<div id="buttons-div" class="m-3">
  <button type="button" id="scrape-btn" class="btn">Scrape Articles</button>
  <a href="/savedarticles"><button type="button" id="saved-btn" class="btn">View Saved
    </button></a><br><br>
</div>

<ul>
  {{#each articles}}
  {{#unless saved}}

  <div class="card mx-auto m-5" style="width: 90%">
    <img src="{{img}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><a href="{{link}}">
          {{title}}
        </a></h5>
      <p class="card-text">{{summary}}</p>
      <a href="{{authorLink}}">
        {{authorName}}
      </a> | {{date}}

    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">{{> buttons/buttons}}</li>
    </ul>

  </div>

  {{/unless}}
  {{/each}}
</ul>

{{!-- This is the COMMENT modal --}}
<div class="modal" id="comment-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form>
          <div class="form-group">
            <label for="comment-name">Name</label>
            <input type="email" class="form-control" id="comment-name" aria-describedby="emailHelp"
              placeholder="Enter Name">

          </div>
          <div class="form-group">
            <label for="comment-comment">Comment</label>
            <textarea class="form-control" id="comment-text" rows="3" placeholder="Enter Comment"></textarea>
          </div>

          <button type="button" id="save-comment" class="btn btn-primary m-2">Save</button>
        </form>
        <hr>
        <h4>All Comments</h4>
        {{> comments/comments}}
      </div>
    </div>
  </div>
</div>